        <recipe name="ammoReforge44MagnumTo9mm" count="5" craft_time="5" craft_area="workbench" tags="ammoReforge">
            <ingredient name="ammo44MagnumBullet" count="4"/>
            <ingredient name="ammoGunPowder" count="1"/>
            <unlock_by_crafting>ammo44MagnumBullet,ammo9mmBullet</unlock_by_crafting>
        </recipe>
    </append>
    
    <!-- .44 Magnum to 7.62mm (4 .44 = 1 recipe, outputs 3 7.62 with reforge loss) -->
    <append xpath="/recipes">
        <recipe name="ammoReforge44MagnumTo762" count="3" craft_time="5" craft_area="workbench" tags="ammoReforge">
            <ingredient name="ammo44MagnumBullet" count="4"/>
