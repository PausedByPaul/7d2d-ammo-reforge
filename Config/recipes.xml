        <recipe name="ammoReforgeArrowToBolt" count="4" craft_time="3" craft_area="workbench" tags="ammoReforge">
            <ingredient name="ammoArrowIron" count="5"/>
            <unlock_by_crafting>ammoArrowIron,ammoCrossbowBoltIron</unlock_by_crafting>
