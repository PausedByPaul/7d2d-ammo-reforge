    <!-- .44 Magnum to Shotgun Shells (4 .44 = 1 recipe, outputs 3 shells with reforge loss) -->
    <append xpath="/recipes">
        <recipe name="ammoReforge44MagnumToShotgunShell" count="3" craft_time="5" craft_area="workbench" tags="ammoReforge">
            <ingredient name="ammo44MagnumBullet" count="4"/>
            <ingredient name="resourcePaper" count="1"/>
