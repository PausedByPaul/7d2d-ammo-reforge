    </append>
    
    <!-- ==================== SPECIALTY AMMO CONVERSIONS ==================== -->
    
    <!-- Arrows/Bolts conversions for crossbow users -->
    
    <!-- Iron Arrows to Iron Crossbow Bolts (5 arrows = 4 bolts, minor loss) -->
