    </append>
    
    <!-- Steel Arrows to Steel Crossbow Bolts -->
    <append xpath="/recipes">
        <recipe name="ammoReforgeSteelArrowToBolt" count="4" craft_time="3" craft_area="workbench" tags="ammoReforge">
